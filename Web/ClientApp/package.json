{
  "name": "financetracker.web",
  "version": "0.3.0",
  "private": true,
  "description": "Finance Tracker",
  "author": "Rafał Chałupnik",
  "main": "public/electron.js",
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "antd": "^5.26.6",
    "bootstrap": "^5.2.3",
    "dayjs": "^1.11.13",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^6.25.1",
    "recharts": "^3.1.0",
    "rimraf": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.39.0",
    "eslint-plugin-react": "^7.32.2",
    "typescript": "^5.5.3",
    "vite": "^6.3.6",
    "vite-tsconfig-paths": "^4.3.2",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "vitest",
    "lint": "eslint ./src/",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently -k \"npm:start\" \"dotnet run --project ../\" \"wait-on http://localhost:3000 && electron .\"",
    "build:backend": "dotnet publish ../ -c Release -o ../publish",
    "electron:build": "npm run build && npm run build:backend && electron-builder"
  },
  "build": {
    "publish": null,
    "appId": "dev.chalupnik.financetracker",
    "productName": "Finance Tracker",
    "copyright": "Copyright © 2025 ${author}",
    "icon": "public/icon.png",
    "files": [
      "public/electron.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../publish",
        "to": "backend"
      },
      {
        "from": "./build",
        "to": "frontend"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
