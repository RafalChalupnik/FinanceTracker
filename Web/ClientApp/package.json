{
  "name": "financetracker.web",
  "version": "0.3.0",
  "private": true,
  "description": "Finance Tracker",
  "author": "Rafał Chałupnik",
  "main": "public/electron.js",
  "dependencies": {
    "@ant-design/icons": "^5.6.1",
    "@types/react-router-dom": "^5.3.3",
    "antd": "^5.26.6",
    "bootstrap": "^5.2.3",
    "dayjs": "^1.11.13",
    "http-proxy-middleware": "^2.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.0",
    "recharts": "^3.1.0",
    "rimraf": "^5.0.0",
    "web-vitals": "^3.3.1",
    "workbox-core": "^6.5.4",
    "workbox-expiration": "^6.5.4",
    "workbox-precaching": "^6.5.4",
    "workbox-routing": "^6.5.4",
    "workbox-strategies": "^6.5.4"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.39.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-react": "^7.32.2",
    "typescript": "^5.2.2",
    "vite": "^5.3.5",
    "vite-plugin-mkcert": "^1.17.5",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "overrides": {
    "autoprefixer": "10.4.5",
    "nth-check": "2.1.1",
    "webpack": "5.81.0"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "vitest",
    "lint": "eslint ./src/",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently -k \"npm:start\" \"dotnet run --project ../\" \"wait-on https://localhost:3000 && electron .\"",
    "build:backend": "dotnet publish ../ -c Release -o ../publish",
    "electron:build": "npm run build && npm run build:backend && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "publish": null,
    "appId": "dev.chalupnik.financetracker",
    "productName": "Finance Tracker",
    "copyright": "Copyright © 2025 ${author}",
    "icon": "public/icon.png",
    "files": [
      "public/electron.js",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../publish",
        "to": "backend"
      },
      {
        "from": "./build",
        "to": "frontend"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}